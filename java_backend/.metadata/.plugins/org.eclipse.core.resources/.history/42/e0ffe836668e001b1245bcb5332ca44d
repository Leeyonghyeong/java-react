server:
  servlet:
    encoding:
      charset: utf-8
      enabled: true
      
# DB Source URL
spring:
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    url: jdbc:mysql://localhost:3306/myword?serverTimezone=UTC&characterEncoding=UTF-8
    username: myword
    password: myword
  jpa:
    show-sql: true
    hibernate:
      ddl-auto: create # create, update, none
      naming:
        physical-strategy: org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl 
    
  